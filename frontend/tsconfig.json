{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "types": ["vue"],
    "noEmit": true
  },
  "vueCompilerOptions": {
    "strictTemplates": false,
    "skipTemplateCodegen": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/vue-template.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json" 
    }
  ]
}
